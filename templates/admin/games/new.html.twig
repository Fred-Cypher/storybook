{% extends 'base.html.twig' %}

{% block title %}Administration - Enregistrement Jeu vidéo{% endblock %}

{% block body %}
    <main class="container">
        <section class="col">
            <div class="col-12 h3">Ajouter un jeu vidéo ancien</div>
            <div class="mb-5">
                {{ form_start(formGame) }}
                    {{ form_row(formGame.title) }}
                    {{ form_row(formGame.subtitle) }}
                    {{ form_row(formGame.editor) }}
                    {{ form_row(formGame.cover) }}
                    {{ form_row(formGame.category) }}
                    {{ form_row(formGame.pegi) }}
                    {{ form_row(formGame.support) }}
                    {{ form_row(formGame.configuration) }}
                    {{ form_row(formGame.digest) }}
                    {{ form_row(formGame.user) }}
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">Enregistrer le conte</button>
                    </div>
                {{ form_end(formGame) }}
            </div>
        </section>
    </main>
{% endblock %}