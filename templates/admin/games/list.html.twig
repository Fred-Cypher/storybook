{% extends 'base.html.twig' %}

{% block title %}Administration des jeux vid√©os{% endblock %}

{% block body %}
    <main class="container">
        <section class="row mt-5">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Jaquette</th>
                        <th>Actions</th>
                    </thead>
                    <tbody> 
                        {% for game in games %}
                            <tr>
                                <td>{{ game.id }}</td>
                                <td>{{ game.title }}</td>
                                <td><img src="{{ asset('assets/uploads/games/miniatures/300x300-' ~ game.covers[0].name) }}" class="mini" alt="Jaquette du jeu"></td>
                                <td class="text-wrap">
                                    <a href="{{ path('app_games_edit_game', {'id': game.id}) }}" class="btn btn-outline-warning">Modifier</a>
                                    <a href="{{ path('app_games_delete_game', {'id': game.id}) }}" class="btn btn-outline-danger">{{ include('admin/games/_delete_form.html.twig') }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}