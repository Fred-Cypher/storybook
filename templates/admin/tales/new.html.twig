{% extends 'base.html.twig' %}

{% block title %}Administration - Enregistrement Conte{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12 h3">Ajouter un conte</div>
            <div class="col-12 vh-100">
                {{ form_start(formTale) }}
                    {{ form_row(formTale.title) }}
                    {{ form_row(formTale.explanation) }}
                    {{ form_row(formTale.digest) }}
                    {{ form_row(formTale.content) }}
                    {{ form_row(formTale.drawings) }}
                    {{ form_row(formTale.caption) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-dark">Enregistrer le conte</button>
                        </div>
                    {{ form_end(formTale) }}
            </div>
        </section>
    </main>
{% endblock %}