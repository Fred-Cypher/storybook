{% extends 'base.html.twig' %}

{% block title %}Administration - Enregistrement Jeu vidéo Récent{% endblock %}

{% block body %}
    <main class="container">
        <section class="col">
            <div class="col-12 h3">Ajouter un jeu vidéo récent</div>
            <div class="mb-5">
                {{ form_start(formRecent) }}
                    {{ form_row(formRecent.title) }}
                    {{ form_row(formRecent.subtitle) }}
                    {{ form_row(formRecent.editor) }}
                    {{ form_row(formRecent.illustrations) }}
                    {{ form_row(formRecent.category) }}
                    {{ form_row(formRecent.year) }}
                    {{ form_row(formRecent.pegi) }}
                    <span class="smallCategory">Tout public : choisir 3 ans</span>
                    {{ form_row(formRecent.notes) }}
                    {{ form_row(formRecent.digest) }}
                    
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-outline-dark mt-3">Enregistrer le jeu vidéo récent</button>
                    </div>
                {{ form_end(formRecent) }}
            </div>
            <div class="backTo">
                <a href="{{ path('app_admin_index') }}" class="btn btn-secondary">Retour à l'administration du site</a>
            </div>
        </section>
    </main>
{% endblock %}