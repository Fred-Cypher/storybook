{% extends 'base.html.twig' %}

{% block title %}Profil {{ app.user.nickname }}{% endblock %}

{% block body %}
<main class="container">
    <div class="mt-3 text-center">
        <span class="h2 px-3">Mon profil : {{ app.user.nickname }}</span>
    </div>

    <section class="row m-2 d-flex justify-content-evenly">
            <div class="card col-md-5 ms-3 mt-2">
                <div class="card-body d-flex row">
                    <p class="card-title h5 mb-3">Voir mes publications</p>
                    <p class="card-text text-center">
                        <a href="#" class="btn btn-outline-dark">Voir mes contes</a>
                    </p>
                </div>
            </div>

            <div class="card col-md-5 ms-3 mt-2">
                <div class="card-body d-flex row">
                    <p class="card-title h5 mb-3">Modifier mon profil</p>
                    <p class="card-text text-center d-flex align-items-end justify-content-center mt-2">
                        <a href="#" class="btn btn-outline-dark">Modifier mon profil</a>
                    </p>
                </div>
            </div>
        </section>
</main>
{% endblock %}
