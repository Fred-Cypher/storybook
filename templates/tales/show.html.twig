{% extends 'base.html.twig' %}

{% block title %}{{ tales.title }}{% endblock %}

{% block body %}
    <main class="taleBackground">
        <!-- Image de fond générée grâce à l'IA : Artguru.ai -->
        <div class="container">
            <div class="row">
                <section class="col-10 m-auto textBackground mt-3">
                    <p class="p-3 h2">{{ tales.title }}</p>
                    <p class="p-3">{{ tales.content|nl2br }}</p>
                    <p class="text-center">
                        {% for drawing in tales.drawings %}
                            <img src="{{ asset('assets/uploads/tales/' ~ drawing.name) }}" class="drawing" alt="Dessin d'illustration du conte">
                        {% endfor %}
                    </p>
                </section>
                <p class="text-center backTo mt-3">
                    <a href="{{ path('app_tales_index') }}" class="btn btn-secondary">
                        <img src="{{ asset('assets/images/logo/plume400.png') }}" class="plume" alt="Plume"> 
                        Retour à la liste de contes
                    </a>
                </p>
            </div> 
        </div>
    </main>
{% endblock %}
